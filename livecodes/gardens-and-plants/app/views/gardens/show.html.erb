<div class="banner mb-3" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= @garden.banner_url %>);">
  <div class="container">
    <h1><%= @garden.name %></h1>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-8">
      <% if @garden.plants.any? %>
        <div class="container">
          <div class="row">
            <% @garden.plants.each do |plant| %>
              <div class="col-6">
                <div class="card-trip">
                  <%= image_tag plant.image_url %>
                  <div class="card-trip-infos">
                    <div>
                      <h2><%= plant.name %></h2>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <% else %>
        <h2>No plants in this garden yet, add some!</h2>
      <% end %>
    </div>
    <div class="col-4">
      <h2>Add a plant:</h2>
      <%= simple_form_for [@garden, @plant] do |f| %>
        <%= f.input :name, placeholder: 'Sakura' %>
        <%= f.input :image_url %>
        <%= f.submit 'Add', class:"btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
